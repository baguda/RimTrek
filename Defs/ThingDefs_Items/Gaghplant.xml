<Defs>
  <ThingDef ParentName="PlantBase">
		<defName>RT_BGaghFarm</defName>
		<label>bithool gagh farm</label>
		<description>A dark, damp hole covered by rocks and pebbles for bithool serpentworms to grow under.</description>
		<statBases>
			<MaxHitPoints>75</MaxHitPoints>
      <Nutrition>0.35</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/GrubFarm</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>40</pathCost>
    <ingestible />
		<plant>
		  <neverBlightable>true</neverBlightable>
		  <growMinGlow>0</growMinGlow>
		  <growOptimalGlow>0</growOptimalGlow>
		  <wildEqualLocalDistribution>false</wildEqualLocalDistribution>
			<fertilityMin>0.01</fertilityMin>
			<fertilitySensitivity>0.30</fertilitySensitivity>
			<dieIfLeafless>false</dieIfLeafless>
			<maxMeshCount>1</maxMeshCount>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>BGagh</harvestedThingDef>
			<harvestYield>75</harvestYield>
			<sowWork>80</sowWork>
			<harvestAfterGrowth>0.30</harvestAfterGrowth>
			<harvestWork>320</harvestWork>
			<sowTags>
				<li>Klingon</li>
			</sowTags>
			<topWindExposure>0.1</topWindExposure>
			<growDays>.5</growDays>
	     <visualSizeRange>0.3~1</visualSizeRange>
         <wildOrder>2</wildOrder>
		</plant>
	</ThingDef>
	

          <AFerengiSecurityGuard>5</AFerengiSecurityGuard>
          <AFerengiRuler>1</AFerengiRuler>
          <AFerengiRecruit>1</AFerengiRecruit>
          <AFerengiHunter>5</AFerengiHunter>
          <AFerengiCommando>3</AFerengiCommando>
          <AFerengiCommandoElite>2</AFerengiCommandoElite>
